@using ImageShare.Models.PostViewModels

@model UploadViewModel

<h2>Post</h2>

<form asp-area="" asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data" onsubmit="e.ajaxSubmit({target:'#post-upload-div',success:window.location.reload()})">
    <div class="form-group">
        <input asp-for="ImageFiles" type="file" multiple="multiple" accept="image/*" />
        <span asp-validation-for="ImageFiles" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Text" class="form-control" placeholder="Text input" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
</form>




